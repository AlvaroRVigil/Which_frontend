                    <LinearLayout
                        android:id="@+id/cbmarcas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/barpuntuacion"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Marcas"
                                    android:textSize="20sp" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp">

                                <CheckBox
                                    android:id="@+id/boxMall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:text="Todas" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp">

                                <CheckBox
                                    android:id="@+id/boxSamsung"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Samsung" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp">

                                <CheckBox
                                    android:id="@+id/boxApple"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Apple" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp">

                                <CheckBox
                                    android:id="@+id/boxNokia"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nokia" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp">

                                <CheckBox
                                    android:id="@+id/boxHuawei"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Huawei" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp">

                                <CheckBox
                                    android:id="@+id/boxBberry"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Black Berry" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp">

                                <CheckBox
                                    android:id="@+id/boxBq"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="BQ" />
                            </TableRow>

                        </TableLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cbsistemas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cbmarcas"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sistemas Operativos"
                                    android:textSize="20sp" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp">

                                <CheckBox
                                    android:id="@+id/boxSall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:text="Todos" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp">

                                <CheckBox
                                    android:id="@+id/boxIos"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="iOS" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp">

                                <CheckBox
                                    android:id="@+id/boxAndroid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Android" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp">

                                <CheckBox
                                    android:id="@+id/boxWindows"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Windows Phone" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp">

                                <CheckBox
                                    android:id="@+id/boxbberryos"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Blackberry OS" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp">

                                <CheckBox
                                    android:id="@+id/boxOtrossistemas"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Black Berry" />
                            </TableRow>

                        </TableLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/barpuntuacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Puntuación"
                                    android:textSize="20sp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="300dp"
                                    android:layout_height="30dp">

                                    <Spinner
                                        android:id="@+id/puntuacionMax"
                                        android:layout_width="110dp"
                                        android:layout_height="wrap_content"
                                        android:layout_alignTop="@+id/puntuacionMin"
                                        android:layout_toEndOf="@+id/textView8"
                                        android:layout_weight="1" />

                                    <TextView
                                        android:id="@+id/textView8"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginEnd="10dp"
                                        android:layout_marginStart="10dp"
                                        android:layout_toEndOf="@+id/puntuacionMin"
                                        android:layout_weight="1"
                                        android:gravity="top"
                                        android:text="&lt;"
                                        android:textAlignment="center"
                                        android:textSize="20sp" />

                                    <Spinner
                                        android:id="@+id/puntuacionMin"
                                        android:layout_width="110dp"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="1"
                                        android:minWidth="@dimen/activity_vertical_margin"
                                         />

                                </RelativeLayout>

                            </TableRow>

                        </TableLayout>
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
