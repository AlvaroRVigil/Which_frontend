    <RelativeLayout
        android:id="@+id/top1"
        android:layout_width="165dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="180dp"
            android:layout_height="165dp"
            android:background="@color/transparent">

            <ImageButton
                android:id="@+id/enlace_perfil_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@color/transparent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@+id/progressBarTop"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/transparent"
                    android:elevation="3dp" />

                <ProgressBar
                    android:id="@+id/progressBarTop"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="57dp"
                    android:fadeScrollbars="true"
                    android:max="100"
                    android:progress="82"
                    android:progressBackgroundTint="@color/colorPrimaryDark"
                    android:progressTint="@color/extra"
                    android:rotation="270"
                    android:saveEnabled="true"
                    android:scaleX="0.5"
                    android:scaleY="41"
                    android:secondaryProgressTint="@android:color/transparent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/bgpr">

                </FrameLayout>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="19dp"
                    android:layout_toEndOf="@+id/Imagen_perfil_top"
                    android:gravity="center_horizontal"
                    android:text="Smart"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/percent_perfil_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/Imagen_perfil_top"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="82"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="36sp" />

                <ImageView
                    android:id="@+id/Imagen_perfil_top"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@mipmap/movil0" />
            </RelativeLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/Nombre_perfil_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/frameLayout"
            android:layout_marginBottom="3dp"
            android:gravity="bottom|center_horizontal"
            android:text="Galaxy S7"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

    </RelativeLayout>

</RelativeLayout>
